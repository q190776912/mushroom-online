page {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(248, 248, 248, 1);
  font-family: PingFang SC;
}

.logo {
  width: 212rpx;
  height: 212rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.07);
  border-radius: 42rpx;
  margin-top: 181rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo image {
  width: 129rpx;
  height: 136rpx;
}

.logo-name {
  margin-top: 64rpx;
  font-size: 48rpx;
  font-weight: 800;
  line-height: 66rpx;
  color: rgba(51, 51, 51, 1);
}

.description {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.description text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(168, 168, 168, 1);
  margin: 0 18.5rpx;
}

.description::after,
.description::before {
  display: block;
  content: '';
  width: 45rpx;
  height: 2rpx;
  background-color: rgba(229, 229, 229, 1);
}

.authorization {
  margin-top: 313rpx;
  width: 568rpx;
  height: 99rpx;
  background: linear-gradient(225deg, rgba(255, 209, 123, 1) 0%, rgba(255, 139, 65, 1) 100%);
  box-shadow: 0 10rpx 30rpx rgba(254, 160, 53, 0.47);
  border-radius: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.authorization image {
  width: 67rpx;
  height: 67rpx;
}

.authorization text {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.phone {
  margin-top: 68rpx;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 42rpx;
  color: rgba(51, 51, 51, 1);
}

.trademark {
  margin-top: 232rpx;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(168, 168, 168, 1);
}

.footer {
  margin: 72rpx 0 16rpx 0;
  width: 268rpx;
  height: 10rpx;
  background: rgba(0, 0, 0, 1);
  border-radius: 200rpx;
}
